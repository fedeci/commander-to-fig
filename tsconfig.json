{
  "compilerOptions": {
    "target": "es6",
    "outDir": "lib/",
    "rootDir": "src/",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@withfig/autocomplete-tools/@types"
    ]
  },
  "exclude": ["test/", "node_modules/", "lib/"]
}
